@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
    <br />
}

<div class="container w-100">
    <div class="row">   
        <div class="col-3">
            <div class="create-button col-8 col-sm-8 offset-sm-2 offset-2 my-3 my-sm-2 text-center">
                <a class="btn btn-primary text-center">Create Group</a>
            </div>
        </div>
        <div class="col-9">
            <div class="create-button col-8 col-sm-8 offset-sm-2 offset-2 my-3 my-sm-2 text-center">
                <h3 class="text-center">Group information will be displayed here.</h3>
            </div>
        </div>
    </div>

    <div class="row d-flex flex-row justify-content-sm-between">
        <div class="col-sm-3 col-3">

            @foreach (Proiect_DAW.Models.Group groups in ViewBag.Groups)
            {
                <a class="card my-3" asp-controller="Groups" asp-action="Show" asp-route-id="@groups.Id">
                    <div class="card-body">
                        <h5 class="card-subtitle rounded-2 ">@groups.Name</h5>
                    </div> 
                </a>
                
            }
        </div>
        <div class="col-sm-9 col-9" >
            <div class="card w-100 my-3 flex-row justify-sm-content-center border-0">
                <div class="card-body d-flex flex-row justify-content-center">
                    <div class="card-text py-3 px-3 rounded-2"><a class="btn btn-primary text-center">Create Group</a></div>
                    </div>
            </div>
        </div>
    </div>
</div>