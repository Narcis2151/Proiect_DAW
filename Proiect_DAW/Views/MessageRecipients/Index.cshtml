<h2>Afisare prietenii</h2>
<br />

@foreach (Proiect_DAW.Models.MessageRecipient recipients in ViewBag.recipients)
{
    <div class="card">
        <div class="card-body">
            <h3 class="card-title alert-success py-3 px-3 rounded-2">@recipients.Message.Text</h3>

            <div class="d-flex justify-content-between flex-row mt-5">


                <div><i class="bi bi-globe"></i> @recipients.Message.Sender</div>

                <div><i class="bi bi-globe"></i> @recipients.UserReceiver</div>

            </div>
        </div>
    </div>
}