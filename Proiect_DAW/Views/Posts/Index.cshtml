<h2>Afisare postari</h2>
<br />

@foreach (Proiect_DAW.Models.Post posts in ViewBag.Posts)
{
    <div class="card">
        <div class="card-body">
            <h3 class="card-title alert-success py-3 px-3 rounded-2">@posts.Id</h3>

            <div class="card-text">@posts.Text</div>

            <div class="d-flex justify-content-between flex-row mt-5">

                <div><i class="bi bi-globe"></i> @posts.ApplicationUser.UserName</div>

                <span class="alert-success">@posts.CreateDate</span>

            </div>
        </div>
    </div>
}