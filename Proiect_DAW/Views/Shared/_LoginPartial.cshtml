@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-dark mx-4" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="bi bi-person btn-lg "></i></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Posts", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark mx-4">Log-Out</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark mx-4" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-person btn-lg"></i></a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark mx-4" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
</ul>
